{
  "manifest_version": 2,

  "name": "browser-mpris2",
  "description": "Implements the MPRIS2 interface for Chrome and Firefox",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://youtube.com/*"],
      "js": ["jquery.min.js", "providers/youtube.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.hooktube.com/*", "*://hooktube.com/*"],
      "js": ["providers/hooktube.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.vk.com/*", "*://vk.com/*"],
      "js": ["jquery.min.js", "providers/common-constants.js", "providers/vk.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://music.yandex.ru/*"],
      "js": ["jquery.min.js", "providers/common-constants.js", "providers/yandexmusic.js"]
    }
  ],

  "web_accessible_resources": [
    "providers/injected-common.js",
    "providers/common-constants.js",
    "providers/common-constants-module.js",
    "providers/vk-injected.js",
    "providers/yandexmusic-injected.js"
  ],

  "permissions": [
    "nativeMessaging"
  ],

  "externally_connectable": {
    "matches": ["*://vk.com/*", "*://music.yandex.ru/*"]
  }
}
